<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    tools:context=".ui.main.MainActivity">

    <!-- 修改时间：20251118 16:45 - 调整空白高度至60dp（约三行文字高度），确保组件下移效果明显 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/lblWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:text="星期几"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/lblSystemDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:text="2025-11-17"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblSystemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/default_time"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lblTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="48sp"
        android:text="@string/default_time"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnStartPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_start"
            android:background="@drawable/rounded_button_bg"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnLap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_lap"
            android:background="@drawable/rounded_button_bg"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_reset"
            android:background="@drawable/rounded_button_bg"
            android:textColor="?attr/colorOnPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_export"
            android:background="@drawable/rounded_button_bg"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnMode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_mode_night"
            android:background="@drawable/rounded_button_bg"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lap_header_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="?attr/colorSurface">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="序号"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="间隔"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="累计"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="开始时间"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="记录时间"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="种类"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="事件"
            android:gravity="center"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLaps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"/>

</LinearLayout>